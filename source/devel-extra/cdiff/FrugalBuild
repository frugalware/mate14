pkgname=cdiff
pkgver=0.3
pkgrel=1
pkgdesc="Colored, incremental, side-by-side diff viewer"
depends=('python' 'less')
groups=('devel-extra')
archs=('i686' 'x86_64')
Finclude pypi
sha1sums=('6223604fc1f5b46a7c1eea083990202988558d32')

build() {
	Fcd
	python setup.py install --root=$Fdestdir --optimize=1 || Fdie
}
